
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .sidebar-box1 {
        background-color: white; /* This will be overridden by the main container's background for the tables */
        padding: 20px;
        margin-bottom: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    .table-responsive {
        overflow-x: auto;
        margin-top: 20px;
        margin-bottom: 20px;
        line-height: 12px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

    .text-center {
        text-align: center;
    }

    .text-start {
        text-align: left;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    .table-secondary {
        background-color: #e9ecef;
    }

    .img1 {
        display: block; /* Makes the image a block element so margin auto works for centering */
        max-width: 250px; /* Sets a maximum width for the image. Adjust as needed. */
        height: auto; /* Ensures the image scales proportionally */
        margin: 20px auto; /* Centers the image horizontally and adds vertical space */
        border: 3px solid #3498db; /* Adds a blue border */
        border-radius: 8px; /* Slightly rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow */
        transition: transform 0.3s ease-in-out; /* Smooth transition for hover effect */
    }

        .img1:hover {
            transform: scale(1.05); /* Slightly enlarges the image on hover */
        }

</style>

<main class="container">


    <section class="content">
        <!-- 1.Start -->
        <div class="sidebar-box1">
            <h4 class="mt-4"> Comming Soon...</h4>


        </div>
        



    </section>






</main>

